<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:local="clr-namespace:ActivityIndicatorDemos"
             x:Class="ActivityIndicatorDemos.MainPage"
			 Title="ActivityIndicator demos">
	<TableView Intent="Menu">
		<TableRoot>
			<TableSection>
				<TextCell Text="ActivityIndicator XAML"
                          Detail="Implement an ActivityIndicator in XAML"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type local:ActivityIndicatorXamlPage}" />
				<TextCell Text="ActivityIndicator Code"
                          Detail="Implement an ActivityIndicator in code"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type local:ActivityIndicatorCodePage}" />
			</TableSection>
		</TableRoot>
	</TableView>	
</ContentPage>
