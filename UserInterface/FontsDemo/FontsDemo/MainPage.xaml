<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FontsDemo.MainPage">
    <StackLayout>
        <Label Text="Hello Forms with XAML"
               FontFamily="Lobster" />

        <StackLayout Orientation="Horizontal">
            <Label Text="Italics"
                   FontAttributes="Italic" />
            <Label Text="Bold"
                   FontAttributes="Bold" />
        </StackLayout>

        <Label Text="Biggest NamedSize"
               FontSize="Large" />
        <Label Text="Use size 72"
               FontSize="72"
               FontAttributes="Italic" />
        <Label Text="Specify Bold Attribute and Micro Size">
            <Label.FontAttributes>Bold</Label.FontAttributes>
            <Label.FontSize>Micro</Label.FontSize>
        </Label>
        <Label Text="Multiple FontAttributes"
               FontAttributes="Bold, Italic" />
        
        <Label>
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="Red, "
                              TextColor="Red"
                              FontAttributes="Italic"
                              FontSize="20" />
                        <Span Text=" blue, "
                              TextColor="Blue"
                              FontSize="32" />
                        <Span Text=" and green! "
                              TextColor="Green"
                              FontSize="12"/>
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </StackLayout>    
</ContentPage>
